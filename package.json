{
  "name": "libvrf",
  "version": "1.0.1",
  "description": "Verifiable Random Functions (VRF) library for Node.js and browsers - RSA-FDH, RSA-PSS-NOSALT, and EC VRF (RFC 9381)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": "dist/browser/libvrf.min.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "browser": "./dist/browser/libvrf.min.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:node && npm run build:browser",
    "build:node": "tsc && tsc --module esnext --outDir dist/esm && mv dist/esm/index.js dist/index.mjs",
    "build:browser": "webpack --config webpack.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "prepublishOnly": "npm run build && npm test",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "vrf",
    "verifiable-random-function",
    "cryptography",
    "rsa",
    "elliptic-curve",
    "rfc9381",
    "rsa-fdh",
    "rsa-pss",
    "ecvrf",
    "p256",
    "sha256",
    "proof",
    "random"
  ],
  "author": "jose-blockchain",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jose-blockchain/libvrf-js"
  },
  "bugs": {
    "url": "https://github.com/jose-blockchain/libvrf-js/issues"
  },
  "homepage": "https://github.com/jose-blockchain/libvrf-js#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/node-rsa": "^1.1.4",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "node-rsa": "^1.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
